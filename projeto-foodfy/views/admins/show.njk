{% extends "admins/layout.njk" %}

{% block head %}
    <title>Foodfy - Show</title>
{% endblock %}

{% block styles %}
    <link rel="stylesheet" href="/styles/user/recipe_details.css">
{% endblock %}

{% block content %}

    <div class="banner_card">

        <div class="edit">
            <h2>Receita: {{recipe.name}}</h2>

            <a href="/admins/{{recipe.id}}/edit">Editar Receita</a>
        </div>

        <div class="image__banner">
            <img src={{recipe.image}} alt="">
        </div>

        <div class="card__content">
            <p>{{recipe.name}}</p>

        </div>

        <div class="card__info">
            <p>por {{recipe.author}}</p>

        </div>

        <div class="procedure">

            <div class="wrapper">
                <h2>Ingredientes</h2>
                <a class="button">Esconder</a>
            </div>
                
            <ul class="preparation_recipe">
                {% for ingredients in recipe.ingredients%}
                    <li>
                        {{ingredients}}
                    </li>
                {% endfor %}
            </ul>       
                
            <div class="wrapper">
                <h2>Modo de preparo</h2>
                <a class="button">Esconder</a>
            </div>

            <ul class="preparation_recipe">
                {% for preparation in recipe.preparations%}
                    <li>
                        {{preparation}}
                    </li>
                {% endfor %}
            </ul>
            
            <div class="wrapper">
                <h2>Informações adicionais</h2>
                <a class="button">Esconder</a>
            </div>

            <p class="preparation_recipe">{{recipe.information}}</p>
          

        </div>

    </div>

    <script src="/scripts.js"></script> 
{% endblock %}   