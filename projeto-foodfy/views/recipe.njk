{% extends "layout.njk" %}


{% block styles%}
    <link rel="stylesheet" href="/styles/recipe.css">
{% endblock %}    

{% block head %}        
    <title>foodfy - revenue</title>
{% endblock %}        
{% block content %}
    <section class="cards">
        
        {% for item in items %}
            <div class="card" id="{{item.id}}">
                <div class="card__image-container">
                    <img src="{{item.imagem}}" alt="{{item.id}}">
                </div>

                <div class="card__content">
                    <p>{{item.title}}</p>

                </div>

                <div class="card__info">
                    <p>{{item.author}}
                    </p>

                </div>
            </div>    
        {% endfor %}
    </section>  

        
    <div class="modal-overlay">
        <div class="modal">

            <div class="modal-img">
                <img src="" alt="">
            </div>

            <div class="modal-title">
                <p></p>
            </div>

            <div class="modal-content">
                <p></p>
            </div>

            <a class="close-modal">
                <p>Fechar modal</p>
            </a>
        </div>    
    </div>

    <script src="scripts.js"></script>     
{% endblock %}    